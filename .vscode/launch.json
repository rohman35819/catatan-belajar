{
    // Konfigurasi VSCode Debugging
    "version": "0.2.0",
    "configurations": [
        


        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },




      {
        "type": "chrome", // Menggunakan Chrome untuk debug
        "request": "launch", // Meluncurkan instance Chrome baru
        "name": "Jalankan di Chrome (localhost:8080)", // Nama konfigurasi
        "url": "http://localhost:8080", // URL yang akan dibuka
        "webRoot": "${workspaceFolder}", // Direktori root dari web app
        "runtimeArgs": [
          "--disable-web-security", // (opsional) jika butuh CORS dimatikan
          "--user-data-dir=${workspaceFolder}/.vscode/chrome" // agar tidak bentrok dengan Chrome default
        ]
      }
    ]
  }
  